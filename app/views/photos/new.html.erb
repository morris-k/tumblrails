<% if @photo.errors.any? %>
	<% @photo.errors.full_messages.each do |m| %>
		<div class="danger"><%= m %></div>
	<% end %>
<% end %>

<%= form_for @photo do |f| %>
	<%= f.hidden_field :blog_id, value: current_user.primary_blog.id %>

		<%= f.fields_for :post_attachments, @post_attachments do |p| %>
			<%= p.file_field :attachment %>
		<% end %>

		<%= f.text_field :caption %></br>

		<%= f.text_field :tag_list, placeholder: "Tags (separated by comma)" %>

		<%= f.submit :class => "btn btn-primary" %>
<% end %>
<button class="btn btn-default"><%= link_to "Cancel", root_path %></button>