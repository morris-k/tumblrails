<!DOCTYPE html>
<html>
<head>
  <title>Tumblrails</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="body">
	<%= render 'shared/header' %>
	<div class="container-fluid page-<%= controller_name %>">
		<% flash.each do |type, message| %>
			<div class="#{type} error-#{type}"><%= message %></div>
		<% end %>
		<%= yield %>
	</div>
</body>
</html>
